abstract Program;
ProgramMain: Program ::= DeclarationSection StatementSection;
ProgramUserDefFunc: Program ::= DeclarationSection StatementSection;
ProgramUserDefSubroutine: Program ::= DeclarationSection StatementSection;

DeclarationSection ::= DeclStmt*;
DeclStmt ::= <Type> [KeywordList] [ShapeInfo] VariableList;
KeywordList ::= Keyword*;
VariableList ::= Variable*;
Keyword ::= <Name: String>;
Variable ::= <Name: String>;
ShapeInfo ::= <Name: String>;

StatementSection ::= Statement*;
abstract Statement;
AssignStmt: Statement ::= Variable Exp;
abstract Exp;
BinaryOperation: Exp ::= LHSVariable <Operation: String> RHSVariable;
LHSVariable: Variable;
RHSVariable: Variable;
