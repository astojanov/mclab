Program ::= Function:Function*;

Function ::= [FunctionName:FunctionName] Param:FormalParam* FunctionBody:FunctionBody;

FunctionName ::= <Name:String>;

FunctionBody ::= Stmt:Stmt*;

FormalParam ::= <Name:String>;

abstract Stmt;

StmtExpr:Stmt ::= Expr:Expr;

StmtNull:Stmt ::= ;

StmtReturn:Stmt ::= [Expr:Expr];

abstract Expr;

ExprInt:Expr ::= <Value:Integer>;

ExprString:Expr ::= <Value:String>;

ExprCall:Expr ::= FunctionName:FunctionName Argument:Expr*;
